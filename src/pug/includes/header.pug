                a(href="#menu")#header-toggle-menu
                    p.header-toggle-menu__title Menu
                    p.header-toggle-menu__title--hidden Close
                    .header-toggle-menu__icon
                        span 
                #menu
                    ul.header-menu-list 
                        li.header-menu-item 
                            a(href='about.html').header-menu-link.text-title About
